<section class="card blog-post" data-id="{{id}}" style="width: 80vw">
  <div class="card-header" style="display: flex; flex-wrap: wrap">
  <h2 style="margin-left: 7px; margin-right: auto;">{{title}}</h2>
  <p style="margin-right: 7px; margin-left: auto;">By: {{user}}</p>
  </div>
  <div class="card-body post-content">
    <p>{{content}}</p>
    
  </div>
  <div class="comment-section">
    <!-- Existing comments will be appended here -->
  </div>
  <div class="comment-form">
    <input type="text" class="comment-input" placeholder="Add a comment..." />
    <button class="commentBtn">Add Comment</button>
  </div>
  <button class="toggle-comments-btn">Show Comments</button>
  <script src="./js/comment.js"></script>
</section>